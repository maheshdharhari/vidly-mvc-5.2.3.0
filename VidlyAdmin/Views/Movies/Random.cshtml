@model VidlyAdmin.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/VidlyAdmin.cshtml";
}
@*
    This is a comment
        on multiple lines
*@
<div id="content-header">
    <div id="breadcrumb">
        <a href=@Url.Action("Index","Home") title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a>
    </div>
    <h1>Movies</h1>
</div>
@*<h2>@Model.Name</h2>*@
@*<h2>@ViewData["Movie"]</h2>*@
@{
    var className = Model.Customers.Count > 0 ? "popular" : null;
}
<h2 class="@className">@Model.Movie.Name</h2>
@if (@Model.Customers.Count == 0)
{
    <text>No one has rented this movie before.</text>
}
else
{
    <ul>
        @foreach (var customer in @Model.Customers)
        {
            <li> @customer.Name</li>
        }

    </ul>
}

